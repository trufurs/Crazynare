<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    >

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/list_wifii"
    android:name="com.example.crazynare.Fragments.wifisearchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager"
    tools:context=".Fragments.WifiSearchFragment"
    tools:listitem="@layout/item_wifiseachlist"
    android:background="@color/white"/>

    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_rotate"
        app:layout_constraintEnd_toEndOf="@id/list_wifii"
        app:layout_constraintTop_toTopOf="@id/list_wifii"
        tools:src="@android:drawable/ic_menu_rotate"
        android:background="@color/white"
        app:tint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
